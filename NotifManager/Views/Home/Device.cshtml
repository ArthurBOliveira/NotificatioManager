@model IEnumerable<NotifManager.Models.Device>

@{
    ViewBag.Title = "Device";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<h2>Device</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            Número de Sessões
        </th>
        <th>
            Tipo de Dispositivo
        </th>
        <th>
            Sistema
        </th>
        <th>
            Última vez Ativo
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SessionCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeviceType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeviceModel) - @Html.DisplayFor(modelItem => item.DeviceOS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastActive)
        </td>
    </tr>
}

</table>
