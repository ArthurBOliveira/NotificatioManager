<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Images/Message.ico">
    <title>AstroPush</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="https://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src='https://www.google.com/recaptcha/api.js'></script>    

    @* Facebook API *@
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/pt_BR/sdk.js#xfbml=1&version=v2.8&appId=261649777620814";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>

    @* Notif Push *@
    <link rel="manifest" href="/manifest.json">
    <script src="https://cdn.onesignal.com/sdks/OneSignalSDK.js" async></script>
    <script>
        var OneSignal = window.OneSignal || [];
        OneSignal.push(["init", {
            appId: "bbda0de5-293f-45f1-9a08-89c6b869ef66",
            autoRegister: true,
            httpPermissionRequest:
            {
                enable: true
            },
            notifyButton:
            {
                enable: true
            },
            promptOptions:
            {
                siteName: 'AstroPush',
                actionMessage: "Nos permita mostrar notificações sobre o nosso conteúdo",
                exampleNotificationTitle: 'Título',
                exampleNotificationMessage: 'Mensagem',
                exampleNotificationCaption: 'Você pode cancelar a inscrição a qualquer momento.',
                acceptButtonText: "Permitir",
                cancelButtonText: "Não Obrigado",
                safari_web_id: '31ca14f2-9a64-44ce-b1fb-164017f55430'
            },
            welcomeNotification:
            {
                disable: false,
                title: 'Bem-vindo',
                message: 'Obrigado por se inscrever.'
            },
            httpPermissionRequest:
            {
                enable: true,
                modalTitle: 'Fique por dentro',
                modalMessage: 'Seja alertado sempre que algo grande aconteça.',
                modalButtonText: 'Eu quero saber mais!'
            }        
        }]);
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div id="fb-root"></div>
                @Html.ActionLink("AstroPush", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Registrar", "Client", "Home")</li>
                    <li>@Html.ActionLink("Login", "Login", "Home")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AstroPush</p>
        </footer>
    </div>

    @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>